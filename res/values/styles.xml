<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="GameoverTheme" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity1</item>
    </style>

    <style name="AnimationActivity1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/jump_alpha_out</item>
        <item name="android:activityOpenExitAnimation">@anim/jump_alpha_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/jump_alpha_out</item>
        <item name="android:activityCloseExitAnimation">@anim/jump_alpha_out</item>
    </style>

</resources>
